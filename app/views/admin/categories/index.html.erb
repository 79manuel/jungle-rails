<section class="admin-category-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>


  <div class="panel panel-default categories"></div>
  <table class="table table-bordered">
   <tbody>
        <tr>
          <th colspan="2">Categories</th>
          <% if flash[:notice]=="Category created!" %>
             <div class="alert alert-info alert-dismissable">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>Category was Created </div>
            <% end %>
            <% if flash[:notice]=="Category deleted!" %>
             <div class="alert alert-info alert-dismissable">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>Category was Deleted </div>
            <% end %>
          <%= render @categories %>
        </tr>
    </tbody>
  </table>

</section>